<div class="offcanvas offcanvas-start" tabindex="-1" id="perfil" aria-labelledby="perfilLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="perfilLabel">Perfil</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="w-25 mx-auto">
            <i class="bi bi-person-circle text-primary" style="font-size: 100px;"></i>
        </div>
        <div>
            <form action="/perfil" method="post" id="formEditarConta">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome..."
                        value="{{logado.nome}}"> <label for="nome">Nome</label>
                    <div class="invalid-feedback" id="erro_nome"></div>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" value="{{logado.email}}" disabled>
                    <label for="email">Email</label>
                </div>
            </form>
            <button class="btn btn-sm btn-dark" onclick="validarEditarPerfil()">Editar</button>
            <form action="/senha" method="post" id="formEditarSenha" class="mt-3">
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha...">
                    <label for="senha">Senha</label>
                    <div class="invalid-feedback" id="erro_senha"></div>
                </div>
            </form>
            <button class="btn btn-sm btn-dark" onclick="validarEditarSenha()">Editar</button>
        </div>
    </div>
</div>
{{/if}}